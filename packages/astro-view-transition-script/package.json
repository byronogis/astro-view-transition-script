{
  "name": "astro-view-transition-script",
  "type": "module",
  "version": "0.0.2",
  "description": "A utility function to execute a callback that compatibly with Astro's view transitions.",
  "author": "Byron <byronogis@outlook.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/byronogis",
  "homepage": "https://github.com/byronogis/astro-view-transition-script#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/byronogis/astro-view-transition-script.git"
  },
  "bugs": "https://github.com/byronogis/astro-view-transition-script/issues",
